<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3>Listing Details :</h3>
  </div>
  <div class="card col-6 offset-3 show-card">
    <img src="<%= listing.image || '/path/to/default/image.jpg' %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title || "No Title Available" %></b><br/>
        <%= listing.description || "No Description Available" %><br/>
        &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %><br>
        <%= listing.location || "Location not specified" %><br>
        <%= listing.country || "Country not specified" %>
      </p>
    </div>
  </div>
  <br/><br/>
  <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 Edit-btn">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display:inline;">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
  </div>
</div>
